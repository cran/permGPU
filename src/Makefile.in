# Compilers
EXT := cu

NVCC := @NVCC@

# Program-specifics
OBJS := permGPU.o
TARGET := permGPU.so

# Compiler options
FLAGS := @NCFLAGS@

# linker options
LDFLAGS := @LDFLAGS@
LIBS := @LIBS@

# Build rules
.SUFFIXES: .cu .o

all: $(TARGET) 

$(TARGET): $(OBJS)
	$(NVCC) -shared $(LDFLAGS) $(LIBS) $(OBJS) -o $@

%.o: %.cu
	$(NVCC) -c $(FLAGS) $< -o $@

clean:
	rm -rf $(OBJS) $(TARGET)

